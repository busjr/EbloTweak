{
    "manifest_version": 3,
    "name": "EbloTweak (Дополнительные настройки для Eblo.id)",
    "version": "1.0",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icons/icon.png",
        "32": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://eblo.id/*"
            ],
            "js": [
                "config.js",
                "modules.js",
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]
}
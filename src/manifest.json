{
    "manifest_version": 3,
    "name": "EbloTweak",
    "description": "Дополнительные настройки для Eblo.id",
    "version": "2.2",
    "browser_specific_settings": {
        "gecko": {
            "id": "eblotweak@eblo.id",
            "update_url": "https://busjr.github.io/EbloTweak.github.io/updates.json"
        }
    },
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "icons/icon16x16.png",
        "32": "icons/icon32x32.png",
        "48": "icons/icon48x48.png",
        "128": "icons/icon128x128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://eblo.id/*"
            ],
            "css": [
                "theme.css"
            ],
            "js": [
                "config.js",
                "modules.js",
                "content.js"
            ],
            "run_at": "document_start"
        }
    ]
}